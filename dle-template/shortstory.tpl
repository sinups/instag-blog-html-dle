<div class="gallery-item" tabindex="0">
	<a href="{full-link}" title="{title}">
		<img src="{image-1}" class="gallery-image" alt="{title}">
		<div class="gallery-item-info">
			<ul>
				<li class="gallery-item-likes"><span class="visually-hidden">View:</span><i class="fas fa-heart" aria-hidden="true"></i> {views}</li>
				<li class="gallery-item-comments"><span class="visually-hidden">Comments:</span><i class="fas fa-comment" aria-hidden="true"></i> {comments-num}</li>
			</ul>
		</div>
	</a>
</div>
